<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-12 col-lg-6">
      <h2>Informaci√≥n del vuelo</h2>
      <%= simple_form_for [@offer, @booking] do |b| %>
        <% @rates = Rate.all %>
        <div class="row">
          <div class="col">
            <h4>Pais:</h4>
            <p><%= @country.name %></p>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <h4>Estado:</h4>
            <p><%= @state.name %></p>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <h4>Costo:</h4>
            <p><%= @offer.cost %>$</p>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <h4>Fecha:</h4>
            <%= b.input :date, as: :hidden,input_html: { value: @offer.date} %>
            <p><%= @offer.date %></p>
          </div>
        </div>
        <%= b.input :rate_id, collection: @rates %>
        <div class="form-actions">
          <%= b.submit "Reservar Vuelo", class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-12 col-lg-6">
      <div id="map"
     style="width: 100%; height: 400px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
  <div class="form-inputs">
    <%= link_to 'Volver', offers_path, class: "btn btn-secondary mt-3" %>
  </div>
  <div class="form-inputs">
    <%= link_to 'Editar', edit_offer_path, class: "btn btn-danger mt-3" %>
  </div>
</div>
